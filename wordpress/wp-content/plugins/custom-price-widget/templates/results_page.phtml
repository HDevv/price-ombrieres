<?php
// Vérifier si les données sont présentes
if (!isset($_GET['typeproduit']) || !isset($_GET['longueur']) || !isset($_GET['largeur']) || !isset($_GET['prix'])) {
    echo '<div class="error-message">Données manquantes pour afficher les résultats.</div>';
    return;
}

// Récupérer les données du formulaire depuis l'URL
$typeproduit = sanitize_text_field($_GET['typeproduit']);
$longueur = sanitize_text_field($_GET['longueur']);
$largeur = sanitize_text_field($_GET['largeur']);
$matiere = isset($_GET['matiere']) ? sanitize_text_field($_GET['matiere']) : '';
$traverse = isset($_GET['traverse']) ? intval($_GET['traverse']) : 1;
$ourlet = isset($_GET['ourlet']) ? intval($_GET['ourlet']) : 0;
$premium = isset($_GET['premium']) ? intval($_GET['premium']) : 0;
$quantite = isset($_GET['quantite']) ? intval($_GET['quantite']) : 1;
$prix = sanitize_text_field($_GET['prix']);

// Déterminer le type de produit en texte
$typeProduitTexte = '';
switch ($typeproduit) {
    case 'P':
        $typeProduitTexte = 'Pergola';
        break;
    case 'R':
        $typeProduitTexte = 'Rideau';
        break;
    case 'B':
        $typeProduitTexte = 'Brise-Vue';
        break;
    case 'S':
        $typeProduitTexte = 'Voile à suspendre';
        break;
    default:
        $typeProduitTexte = 'Produit';
}

// Déterminer le type de traverse en texte
$traverseTexte = '';
switch ($traverse) {
    case 1:
        $traverseTexte = 'Oui > 80cm';
        break;
    case 2:
        $traverseTexte = 'Oui < 80cm';
        break;
    case 3:
        $traverseTexte = 'Non';
        break;
    default:
        $traverseTexte = 'Non spécifié';
}

// Calculer la surface
$surface = $longueur * $largeur;

// Formater le prix
$prixFormate = number_format($prix, 2, ',', ' ') . ' €';
